{
  "manifest_version": 2,

  "name": "urltoqrcode",
  "short_name": "urltoqrcode",
  "description": "URL to QRCode as Chrome extension",
  "author": "Wasin Thonkaew",
  "version": "0.0.0.1",
  "icons": {
    "32": "icon32.png",
    "48": "icon48.png",
    "64": "icon64.png",
    "128": "icon128.png",
    "256": "icon256.png",
    "512": "icon512.png"
  },
  "browser_action": {
    "default_icon": {
      "64": "icon64.png",
      "128": "icon128.png",
      "256": "icon256.png",
      "512": "icon512.png"
    },
    "default_popup": "popup.html",
    "default_title": "Click to get QRCode of browser tab's URL"
  },
  "permissions": [
    "tabs"
  ]
}